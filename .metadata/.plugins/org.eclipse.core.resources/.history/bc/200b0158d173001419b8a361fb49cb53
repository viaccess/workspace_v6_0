#include <msp430.h> 

/*
 * main.c
 */

void configureClocks();
volatile unsigned i;

int main(void) {
    WDTCTL = WDTPW | WDTHOLD;	// Stop watchdog timer
	configureClocks();

	//ConfigureLED on P1.0;
	P1DIR = BIT0;
	P1OUT = ~BIT0;



	//Configure switch on P1.3;
	P1REN |= BIT3;
	P1OUT = BIT3;

	while(1)
	{
		if(P1IN & ~BIT3)
		{
			P1OUT ^= BIT0;
		}

	}


	return 0;
}

void configureClcoks()
{
 //Set System DCO to 8Mhz
	BCSCTL1 = CALBC1_1MHZ;
	DCOCTL =  CALDCO_1MHZ;

 //Set LFXT1 to VLO @12Khz
	BCSCTL3 |= LFXT1S_2;
}
